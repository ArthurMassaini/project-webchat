<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project WebChat</title>
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <main class="main">
      <section class="section">
        <div class="div-section">
          <div class="form-input-nickname">
            <input
              type="text"
              placeholder="Insira seu nickName"
              data-testid="nickname-box"
              class="nickname-box"
            />

            <button
              type="button"
              data-testid="nickname-button"
              class="nickname-button"
            >
              Salvar
            </button>
          </div>

          <div class="users-list">
            User List
            <ul class="ul-list"></ul>
          </div>
        </div>

        <div class="messages-list">
          MessageList
          <p data-testid="message"></p>
        </div>
      </section>

      <div class="form-input-message">
        <input
          type="text"
          placeholder="Digite uma nova mensagem aqui"
          class="input-message"
          data-testid="message-box"
        />

        <button type="button" data-testid="send-button" class="send-button">
          Enviar
        </button>
      </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/client.js"></script>
  </body>
</html>
